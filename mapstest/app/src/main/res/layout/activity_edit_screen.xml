<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.mykolasomov.mapstest.EditScreen"
    android:background="@drawable/reg_screen_bg">

    <TextView
        android:text="Edit information below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/regWelcomeEdit"
        android:layout_below="@+id/regWelcomeTitle2Edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/regFirstNameEdit"
        android:layout_marginTop="33dp"
        android:hint="first name"
        android:layout_below="@+id/regWelcomeEdit"
        android:layout_centerHorizontal="true"
        android:textColorHint="#ffffffff" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/regLastNameEdit"
        android:hint="last name"
        android:layout_below="@+id/regFirstNameEdit"
        android:layout_alignLeft="@+id/regFirstNameEdit"
        android:layout_alignStart="@+id/regFirstNameEdit"
        android:textColorHint="#ffffffff" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/regEmailEdit"
        android:hint="example@email.com"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/regLastNameEdit"
        android:layout_alignLeft="@+id/regLastNameEdit"
        android:layout_alignStart="@+id/regLastNameEdit"
        android:textColorHint="#ffffffff" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regPasswordEdit"
        android:hint="passwordEdit"
        android:layout_below="@+id/regEmailEdit"
        android:layout_alignLeft="@+id/regEmailEdit"
        android:layout_alignStart="@+id/regEmailEdit"
        android:textColorHint="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Information"
        android:id="@+id/regSubmitInfoEdit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME"
        android:id="@+id/regWelcomeTitleEdit"
        android:textStyle="italic"
        android:autoLink="none"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Penguin Carpool"
        android:id="@+id/regWelcomeTitle2"
        android:textStyle="bold|italic"
        android:autoLink="none"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_below="@+id/regWelcomeTitleEdit"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
