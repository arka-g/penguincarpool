<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mcmaster.t202.penguincarpool.HomeScreen"
    android:id="@+id/layoutHomeScreen"
    android:background="@drawable/home_screen_bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Name"
        android:id="@+id/scheduleTaxi"
        android:layout_marginTop="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="launchScheduleScreen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Taxi"
        android:id="@+id/orderTaxi"
        android:layout_below="@+id/scheduleTaxi"
        android:layout_marginTop="26dp"
        android:layout_alignRight="@+id/scheduleTaxi"
        android:layout_alignEnd="@+id/scheduleTaxi"
        android:layout_alignLeft="@+id/scheduleTaxi"
        android:layout_alignStart="@+id/scheduleTaxi"
        android:onClick="launchRequestScreen" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:id="@+id/viesProfile"
        android:onClick="launchViewProfile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Get In Taxi"
        android:id="@+id/viewIdleScreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="launchIdleScreen" />
</RelativeLayout>
